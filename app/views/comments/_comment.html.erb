<%= div_for(comment) do %>
 <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <div class="comments-wrapper clearfix">
    <div class="null-left">
      <p>
        <div class="commentheader">
        <small> <i><%= comment.user.email %></i> (<strong><%= time_ago_in_words(comment.created_at) %></strong> ago) </small>
       <% if comment.user == current_user %>
    <p class="delmargin"><%= link_to 'delete', comment, method: :delete, data: { confirm: 'are you sure?'} %></p>
  <% end %>
  </div>
      </p>
      <p class="lead"><%= comment.body %></p>
    </div>
  </div>

<% end %>